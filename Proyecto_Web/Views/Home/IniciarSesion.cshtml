@model Proyecto_Web.Entidades.Usuario
@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = "~/Views/Shared/_Layout - Externo.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row w-100 mx-auto">
                <div class="col-md-8 mx-auto">
                    <div class="auth-form-light text-center py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="../../images/logo-dark.svg" alt="logo">
                        </div>
                        <h4>¡Hola! Vamos a comenzar</h4>
                        <h6 class="font-weight-light">Inicia sesión para continuar</h6>
                        @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post, new { @class = "pt-3" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control form-control-lg", @placeholder = "Username", @type = "email" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control form-control-lg", @placeholder = "Password", @type = "password" })
                            </div>
                            @if (ViewBag.MsjPantalla != null)
                            {
                                <div class="alert alert-warning" role="alert">
                                    @ViewBag.MsjPantalla
                                </div>
                            }
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Iniciar</button>
                            </div>
                        }
                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("RecuperarAcceso", "Home")" class="auth-link text-black">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div class="text-center mt-4 font-weight-light">
                            ¿No tienes una cuenta? <a href="@Url.Action("RegistrarUsuario", "Home")" class="text-primary">Crear</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
